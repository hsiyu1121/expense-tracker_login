<div class="container">
  <div class="form-group">
    <div class="d-flex justify-content-center mt-4">
      <form action="/filter">
        <div class="btn-group">
          <input type="month" id="start" name="month" min="2019-06" value="{{month}}">
        </div>
        <div class="btn-group">
          <button type="button" id="btn-filter" class="btn dropdown-toggle" data-toggle="dropdown" aria-haspopup="true"
            aria-expanded="false">類別</button>
          <div class="dropdown-menu scroll-menu">
            <button class="dropdown-item" name="sort" value="all">All</button>
            {{#each categories}}
            <button class="dropdown-item" name="sort" value="{{this.title}}"><i class="{{this.icon}}"></i>
              {{this.title}}</button>
            {{/each}}
          </div>
        </div>
      </form>
    </div>
    <div class="d-flex justify-content-center mt-4">
      <h5>總金額:</h5>
      <h1 class="text-primary ml-3">{{totalAmount}}</h1>
    </div>

    <div class="d-flex justify-content-center">
      <div class="col-md-8">
        <div class="form-group">
          {{#each records}}
          <div class="list-group-item">
            <div class="d-flex list-content">
              <div class="row">
                <div class="icon-body mr-4">
                  <span>
                    <i class=" 
                      {{#isEqual this.category '收益'}}  fas fa-hand-holding-usd {{/isEqual}}
                      {{#isEqual this.category '家居物業'}} fas fa-home {{/isEqual}}
                      {{#isEqual this.category '交通出行'}} fas fa-shuttle-van {{/isEqual}}
                      {{#isEqual this.category '休閒娛樂'}} fas fa-grin-beam {{/isEqual}}
                      {{#isEqual this.category '餐飲食品'}} fas fa-utensils {{/isEqual}}
                      {{#isEqual this.category '其他'}} fas fa-pen {{/isEqual}}
                      "></i></span>
                </div>
                <div class="ml-0" style="width: 100px;">
                  <div class="name" style="font-size: larger;">{{this.name}}</div>
                  <small> {{this.merchant}}</small>
                </div>
                <div class=" d-flex align-items-center"> {{this.date}}</div>
                <div class="my-auto ml-3" style="font-size: larger; position: absolute; left: 50%; top: 15px">
                  ${{this.amount}}
                </div>
              </div>
            </div>
            <div class="col-auto mr-auto d-flex justify-content-end">
              <a class="btn btn-success mx-1" href="/records/{{ this._id }}/edit">修改</a>
              <form action="/records/{{this._id}}?_method=DELETE" method="POST" style="display: inline;"
                onsubmit="return confirm('確定是否刪除')">
                <button class="btn btn-danger" type="submit">刪除</button>
              </form>
            </div>
          </div>
          {{/each}}
        </div>
      </div>
    </div>
  </div>
</div>